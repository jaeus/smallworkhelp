import csv
import os

 
while True:
    asmpnlist, bomdata = [], []
    asmpnlist.append(input("Type 1st assembly's p/n: "))
    asmpnlist.append(input("Type 2nd assembly's p/n: "))   

    for asmpn in asmpnlist:
        for filename in os.listdir('.'):
            if asmpn in str(filename):
                with open(filename, newline='') as rawdata:
                    tempdata = csv.reader(rawdata, delimiter=',')
                    bomtemp = list(tempdata)
                    rawdata.close()
                bomtemp[0][0] = bomtemp[0][0].split('"')[1]

                eachbom = []
                for colno in [0,1,3]:
                    eachcol = []
                    for eachrow in bomtemp:
                        if 'skel' in eachrow[1]:
                            continue
                        eachcol.append(eachrow[colno].split('.')[0]) if colno == 1 else eachcol.append(eachrow[colno])
                    eachbom.append(eachcol)
                bomdata.append(eachbom)

    if len(bomdata) == 2:
        break
    else:
        print("[%s] OR [%s] DOESN'T EXIST IN THE FOLDER\n" %(asmpnlist[0], asmpnlist[1]))
